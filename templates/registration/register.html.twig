{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Register</h2>
                            <div class="page_link">
                                <a href="{{ path('index') }}">Главная</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <section class="contact_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_start(registrationForm, { 'attr': {'class': 'contact_form'} }) }}
                    <div class="form-group">
                        {{ form_row(registrationForm.email, { 'attr': {'label': 'Email', 'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.firstName, {'label': 'Name', 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <button class="btn primary-btn">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
