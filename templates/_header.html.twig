<!--================ Start Header Menu Area =================-->
{% set route = app.request.attributes.get('_route') %}
<header class="header_area white-header">
    <div class="main_menu">
        <div class="search_input" id="search_input_box">
            <div class="container">
                <form class="d-flex justify-content-between" method="" action="">
                    <input
                            type="text"
                            class="form-control"
                            id="search_input"
                            placeholder="Search Here"
                    />
                    <button type="submit" class="btn"></button>
                    <span
                            class="ti-close"
                            id="close_search"
                            title="Close Search"
                    ></span>
                </form>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand" href="{{ path('index') }}">
                    <img class="logo-2" src="{{ asset('img/logo2.png') }}" alt="" />
                </a>
                <button
                        class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                >
                    <span class="icon-bar"></span> <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div
                        class="collapse navbar-collapse offset"
                        id="navbarSupportedContent"
                >
                    <ul class="nav navbar-nav menu_nav ml-auto">
                        <li class="nav-item {{ route ==  'index' ? 'active' }}">
                            <a class="nav-link" href="{{ path('index') }}">Главная</a>
                        </li>
                        <li class="nav-item {{ route ==  'courses' ? 'active' }}">
                            <a class="nav-link" href="{{ path('courses') }}">Все курсы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Контакты</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link search" id="search">
                                <i class="ti-search"></i>
                            </a>
                        </li>

                        {% if (is_granted('ROLE_USER') or  is_granted('ROLE_ADMIN')) %}
                            <li class="nav-item "><a class="nav-link" href="{{ path('logout') }}">Logout</a></li>
                            <li class="nav-item"><a class="nav-link" href="/{{ app.user.slug }}">{{ app.user.slug }}</a></li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link {{ route ==  'login' ? 'active' }}" href="{{ path('login') }}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ route ==  'register' ? 'active' }}" href="{{ path('register') }}">Register</a>
                            </li>
                        {% endif %}


                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<!--================ End Header Menu Area =================-->
