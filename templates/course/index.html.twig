{% extends 'base.html.twig' %}

{% block title %}courses{% endblock %}

{% block body %}
    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Все курсы</h2>
                            <div class="page_link">
                                <a href="{{ path('index') }}">Главная</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <section class="blog_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog_left_sidebar">
                        {% for course in courses %}
                            <article class="row blog_item">
                                <div class="col-md-3">
                                    <div class="blog_info text-right">
                                        <ul class="blog_meta list">
                                            <li><a href="#">{{ course.user.getFirstName}}<i class="ti-user"></i></a></li>
                                            <li><a href="#">{{ course.updatedAt|date("F jS \\a\\t g:ia") }}<i class="ti-calendar"></i></a></li>
                                            <li><a href="#">1.2M Views<i class="ti-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="blog_post m-1">
                                        {% if  course.video %}
                                            <video width="100%" height="300" controls="controls" poster="">
                                                <source src="{{ vich_uploader_asset(course, 'videoFile', 'App\\Entity\\Course') }}"
                                                        type='video/ogg; codecs="theora, vorbis"'>
                                                <source src="{{ vich_uploader_asset(course, 'videoFile', 'App\\Entity\\Course') }}"
                                                        type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'>
                                                <source src="{{ vich_uploader_asset(course, 'videoFile', 'App\\Entity\\Course') }}"
                                                        type='video/webm; codecs="vp8, vorbis"'>
                                                Элемент video не поддерживается вашим браузером.
                                                <a href="{{ vich_uploader_asset(course, 'videoFile', 'App\\Entity\\Course') }}">Скачайте
                                                    видео</a>.
                                            </video>
                                        {% endif %}
                                        <div class="blog_details single_course">

                                            <a href="{{ path('show-course', {'id': course.id}) }}">
                                                <h2>{{ course.name }}</h2>
                                            </a>

                                            <p class=" course_head">
                                                {{ course.shortDescription }}

                                            </p>
                                            <span class="price"> ₴{{ course.cost }}</span>
                                            {% if not (app.user) or  (course.user.getId != app.user.getId) %}
                                            <a href="#" class="blog_btn">
                                                Купить курс
                                            </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
